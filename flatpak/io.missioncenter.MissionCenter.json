{
  "app-id": "io.missioncenter.MissionCenter",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "missioncenter",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=all",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Flatpak",
    "--system-talk-name=org.freedesktop.systemd1",
    "--system-talk-name=org.freedesktop.NetworkManager"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": [
      "--share=network"
    ],
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "musl-libc",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://musl.libc.org/releases/musl-1.2.4.tar.gz",
          "sha256": "7a35eae33d5372a7c0da1188de798726f68825513b7ae3ebe97aaaa52114f039"
        }
      ]
    },
    {
      "name": "dmidecode",
      "buildsystem": "simple",
      "build-commands": [
        "make CC=musl-gcc CFLAGS=-static LDFLAGS=-static install-bin prefix=/app",
        "rm -rf /app/bin/musl-gcc /app/bin/udevadm",
        "mv /app/sbin/dmidecode /app/bin/dmidecode",
        "rm -rf /app/sbin",
        "rm -rf /app/include",
        "rm -rf /app/lib"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.savannah.gnu.org/releases/dmidecode/dmidecode-3.5.tar.xz",
          "sha256": "79d76735ee8e25196e2a722964cf9683f5a09581503537884b256b01389cc073"
        }
      ]
    },
    {
      "name": "eudev",
      "buildsystem": "autotools",
      "config-opts": [],
      "cleanup": [
        "/bin",
        "/sbin",
        "/etc",
        "/lib/udev"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/eudev-project/eudev.git",
          "commit": "39979ddf46e75d1b75bf381e1c73914c226c4302"
        }
      ]
    },
    {
      "name": "missioncenter",
      "buildsystem": "meson",
      "config-opts": [
        "-Dbuildtype=release"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ]
    }
  ]
}
