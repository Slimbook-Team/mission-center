using Gtk 4.0;

template PerformancePage : Box {
  orientation: vertical;

  refresh-interval: 1000;

  Box page_content {
    margin-top: 10;
    margin-bottom: 15;
    margin-end: 20;

    ListBox sidebar {
      visible: bind-property PerformancePage.summary-mode inverted;
      styles [
        "navigation-sidebar",
      ]

      width-request: 220;
    }

    Stack page_stack {
      margin-start: 20;
      transition-type: slide_up_down;
    }
  }
}
